generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  
}

model User {
  id                String              @id @default(cuid())
  email             String              @unique
  password          String
  name              String?
  role              Role                @default(STUDENT)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  currentSubject    String?
  chatConversations ChatConversation[]
  exercises         ExerciseHistory[]
  sessions          LearningSession[]
  quizSessions      QuizSession[]
  progress          UserTopicProgress[]
}

model Subject {
  id          String   @id @default(cuid())
  name        String
  description String?
  icon        String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  topics      Topic[]
}

model Topic {
  id          String              @id @default(cuid())
  subjectId   String
  name        String
  description String?
  order       Int                 @default(0)
  userId      String?
  userName    String?
  exercises   ExerciseHistory[]
  subject     Subject             @relation(fields: [subjectId], references: [id])
  progress    UserTopicProgress[]

  @@index([subjectId])
  @@index([userId])
}

model UserTopicProgress {
  id             String    @id @default(cuid())
  userId         String
  topicId        String
  currentLevel   Int       @default(1)
  exercisesCount Int       @default(0)
  correctCount   Int       @default(0)
  successRate    Float     @default(0)
  isMastered     Boolean   @default(false)
  unlockedAt     DateTime  @default(now())
  masteredAt     DateTime?
  updatedAt      DateTime  @updatedAt
  subjectName    String?
  userName       String?
  topic          Topic     @relation(fields: [topicId], references: [id])
  user           User      @relation(fields: [userId], references: [id])

  @@unique([userId, topicId])
  @@index([userId])
  @@index([subjectName])
}

model ExerciseHistory {
  id            String   @id @default(cuid())
  userId        String
  topicId       String
  level         Int
  question      String
  userAnswer    String?
  correctAnswer String?
  isCorrect     Boolean?
  aiFeedback    String?
  tokensUsed    Int?
  costUsd       Float?
  createdAt     DateTime @default(now())
  userName      String?
  topic         Topic    @relation(fields: [topicId], references: [id])
  user          User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([topicId])
  @@index([createdAt])
  @@index([userName])
}

model LearningSession {
  id             String    @id @default(cuid())
  userId         String
  startedAt      DateTime  @default(now())
  endedAt        DateTime?
  exercisesCount Int       @default(0)
  correctCount   Int       @default(0)
  totalCostUsd   Float     @default(0)
  user           User      @relation(fields: [userId], references: [id])

  @@index([userId])
}

model QuizSession {
  id            String   @id @default(cuid())
  userId        String
  subject       String
  level         Int
  model         String
  academicLevel String
  questions     String
  answers       String
  currentIndex  Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id])

  @@unique([userId, subject, level])
  @@index([userId])
  @@index([updatedAt])
}

model ChatConversation {
  id        String   @id @default(cuid())
  userId    String
  title     String?
  model     String
  messages  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tokensIn  Int      @default(0)
  tokensOut Int      @default(0)
  type      String   @default("chat")
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([updatedAt])
  @@index([type])
}

enum Role {
  STUDENT
  ADMIN
}
